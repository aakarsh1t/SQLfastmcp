# SQL Server MCP Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Option 1: Use individual connection parameters
DB_SERVER=your-sql-server.database.windows.net
DB_DATABASE=your-database-name
DB_USERNAME=your-username
DB_PASSWORD=your-password

# Option 2: Use full connection string (overrides individual parameters)
# DB_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=your-db;Uid=your-user;Pwd=your-pass;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;

# ============================================================================
# AZURE WEB APP CONFIGURATION  
# ============================================================================

# Server host and port (automatically set by Azure)
HOST=0.0.0.0
PORT=8000

# Azure Web App settings (automatically set by Azure)
# WEBSITE_SITE_NAME=your-app-name
# WEBSITE_RESOURCE_GROUP=your-resource-group
# WEBSITE_SUBSCRIPTION_ID=your-subscription-id

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================

# MCP Server identification
MCP_SERVER_NAME=SQL Server MCP
MCP_SERVER_VERSION=1.0.0
MCP_DESCRIPTION=Model Context Protocol server for MS SQL Server database operations

# Security settings
QUERY_TIMEOUT=30
MAX_ROWS_RETURNED=1000
ENABLE_WRITE_OPERATIONS=false

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL=INFO
LOG_SQL_QUERIES=true
LOG_PERFORMANCE_METRICS=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Keys for client authentication (comma-separated)
# MCP_API_KEYS=key1,key2,key3

# CORS settings
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================================================
# AZURE SERVICES (Optional)
# ============================================================================

# Azure Key Vault (for secrets management)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (for monitoring)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Set to true for development mode
DEBUG=false

# Auto-reload server on code changes (development only)
RELOAD=false

# Enable API documentation endpoints
ENABLE_DOCS=true